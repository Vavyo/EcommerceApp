@model WebApplication1.Models.Api.CategoryDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(category => product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(category => product.Description)
                    </td>
                    <td>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a> |
                        <a asp-controller="Products" asp-action="RemoveCategory" asp-route-id="@product.Id" data="@Model.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
